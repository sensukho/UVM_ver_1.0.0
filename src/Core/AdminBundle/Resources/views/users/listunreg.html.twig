{% extends 'CoreAdminBundle:admin:layout.html.twig' %}
{% block content %}
    
    <div class="container">

        <div class="hero-unit">
            <h1>Usuarios :: Pendientes</h1>
            <p></p>
        </div>

        <form name="zd_form" method="POST" action="{{ path('admin_usuarios_listar_unreg', {session: session, q: q, offset: 1}) }}">
            <table border="0" width="80%" align="center">
                <tr>
                    <th align="right" valign="top"><font size="4"><input type="text" name="q" placeholder="Buscar..." value="" style="height:30px; width: 200px;" required/></font> <input type="submit" name="entrar" style="height:25px; width: 70px;" value="Buscar"></th>
                    </th>
                </tr>
            </table>
        </form>

        <div>&nbsp;</div>

        <div class="row">
            <table id="listuser" border="" width="88%" align="center">
                <tr>
                    <th style="background-color:#333; color:#fff;" align="left";>Páginas: 
                {% for i in range(1, total_pages) %}
                    <a href="{{ path('admin_usuarios_listar_unreg', {session: session, q: q, offset: i}) }}">&nbsp;{{ i }}&nbsp;</a>
                {% endfor %}
                    </th>
                </tr>
            </table>
            <table id="listuser" border="1" width="90%" align="center">
                <tr>
                    <th width="5%">ID</th>
                    <th width="25%">Nombre</th>
                    <th width="20%">Matricula</th>
                    <th width="10%">Campus</th>
                    <th width="10%">Categoria</th>
                    <th width="20%">Fecha</th>
                    <!--<th width="5%">Editar</th>
                    <th width="5%">Eliminar</th>-->
                </tr>
                {% set i = 1 %}
                {% for usuario in usuarios %}
                <tr>
                    <td>{{ i }}</td>
                    <td>{{ usuario.firstname }} {{ usuario.secondname }}</td>
                     <td align="center">{{ usuario.matricula }}</td>
                     <td align="center">{{ usuario.campus }}</td>
                     <td align="center">{{ usuario.tipo }}</td>
                     <td align="center">{{ usuario.fecha|date("m/d/Y") }}</td>
                </tr>
                {% set i = i + 1 %}
                {% endfor %}
            </table>
            <table id="listuser" border="" width="88%" align="center">
                <tr>
                    <th style="background-color:#333; color:#fff;" align="left";>Páginas: 
                {% for i in range(1, total_pages) %}
                    <a href="{{ path('admin_usuarios_listar_unreg', {session: session, q: q, offset: i}) }}">&nbsp;{{ i }}&nbsp;</a>
                {% endfor %}
                    </th>
                </tr>
            </table>
        </div>
        <hr>

        <footer></footer>

    </div>

{% endblock %}